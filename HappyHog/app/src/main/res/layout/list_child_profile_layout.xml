            android:layout_height="wrap_content"
            android:layout_below="@id/list_child_profile_name_text"
            android:text="memo"
            android:textSize="30dp"/>

        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/list_child_profile_memo_text"
            android:layout_alignTop="@id/list_child_profile_memo_text"
            android:layout_alignBottom="@id/list_child_profile_memo_text"
            android:layout_alignParentEnd="true"/>
        -->


    </RelativeLayout>

    <Button
        android:id="@+id/list_child_profile_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>